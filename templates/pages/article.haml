%article.post
  %header
    %h1
      = title
    %span.date
      %span.month
        = month
      %span.day
        = day
      %span.year
        = year
    %p{ :style => "clear:both;" }
  %section.content
    = body
  %section.comments
    - if @config[:disqus]
      #disqus_thread
      %script{ :src => "http://disqus.com/forums/#{@config[:disqus]}/embed.js", :type => "text/javascript" }
      %noscript
        %a{ :href => "http://#{@config[:disqus]}.disqus.com/?url=ref" }
          View the discussion thread.
      %a.dsq-brlink{ :href => "http://disqus.com" }
        blog comments powered by
        %span.logo-disqus
          Disqus
