%h1
  = @path.capitalize unless @path.nil?
- if @path != 'archives' && !@path.nil?
  %br
  %a{ :href => "/archives"}
    &laquo; Back To All Archives
%ul
  - if archives.length > 0
    - @year = ""
    - for entry in archives
      - if entry.date.match(/2\d\d\d$/).to_s != @year
        - @year = entry.date.match(/2\d\d\d$/).to_s
        - unless @year == @path
          %li
            %h2
              %a{ :href => "/#{@year}", :style=>"text-decoration:none;"}
                = @year
                &raquo;
      %li
        %a{ :href=>"#{entry.path}"}
          = entry.title
  - else
    There are no articles for this date.

